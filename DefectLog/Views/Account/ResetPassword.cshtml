@model DefectLog.Forms.ResetPasswordForm

@{
    ViewBag.Title = "Reset Password";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Time for a new password</legend>

        <div class="row">
            <div class="col-sm-5">
                @Html.HiddenFor(model => model.ResetPasswordKey)

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.VerifyPassword)
                    @Html.EditorFor(model => model.VerifyPassword)
                    @Html.ValidationMessageFor(model => model.VerifyPassword)
                </div>
            </div>
        </div>

        <hr />

        <div>
            <input type="submit" value="Save Password" class="btn btn-success" />
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
