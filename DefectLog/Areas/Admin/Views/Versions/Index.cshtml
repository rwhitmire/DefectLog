@model IEnumerable<DefectLog.Areas.Admin.ViewModels.AdminAppVersionListItem>

@{
    ViewBag.Title = "Versions";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Version List</h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.VersionNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DefectCount)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VersionNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DefectCount)
                        </td>
                        <td class="text-right">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-default" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<p>
    @Html.ActionLink("New Version", "Create", null, new { @class = "btn btn-primary" })
</p>
